<!DOCTYPE html>
<html>
<head>
    <title>Platform Metrics</title>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/datatables.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }
        
        th {
            background-color: #870e40;
            color: #f2f2f2;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        /* COLLAPSE STYLING */
        .platform-header {
            background-color: #f5f5f5;
            cursor: pointer;
            padding: 15px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            margin-top: 10px;
        }

        .platform-header:hover {
            background-color: #e9ecef;
        }

        .sub-header {
            background-color: #f8f9fa;
            cursor: pointer;
            padding: 12px;
            padding-left: 30px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 3px solid #ddd;
            margin: 5px 0;
        }

        .sub-header:hover {
            background-color: #e9ecef;
        }

        .collapse-icon {
            font-size: 14px;
            margin-left: 10px;
        }

        .platform-content {
            display: none;
        }

        .platform-content.expanded {
            display: block;
        }

        .sub-content {
            display: none;
            margin-left: 20px;
            margin-bottom: 10px;
        }

        .sub-content.expanded {
            display: block;
        }

        .group-status {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: 10px;
            font-weight: bold;
        }

        .status-healthy {
            background-color: green;
            color: white;
        }

        .status-unhealthy {
            background-color: red;
            color: white;
        }

        /* SEARCH & FILTER STYLING */
        .sub-filters {
            background-color: #f8f9fa;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .sub-filters label {
            font-weight: bold;
            margin: 0;
        }

        .sub-filters input,
        .sub-filters select {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .sub-filters input {
            flex: 1;
            max-width: 300px;
        }

        /* PAGINATION STYLING */
        .group-pagination {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
            padding: 15px;
            gap: 5px;
        }

        .pagination-btn {
            min-width: 40px;
            height: 40px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            background-color: #fff;
            cursor: pointer;
            border-radius: 4px;
            font-size: 14px;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .pagination-btn:hover:not(:disabled) {
            background-color: #f5f5f5;
            border-color: #999;
        }

        .pagination-btn:disabled {
            background-color: #f9f9f9;
            color: #ccc;
            cursor: not-allowed;
            border-color: #e0e0e0;
        }

        .pagination-btn.active {
            background-color: #870e40;
            color: white;
            border-color: #870e40;
            font-weight: bold;
        }

        .pagination-btn.active:hover {
            background-color: #6b0b33;
            border-color: #6b0b33;
        }

        .pagination-ellipsis {
            padding: 8px 12px;
            color: #666;
            user-select: none;
        }

        .pagination-nav {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <h4 class="partialHeader">Platform Metrics</h4>

    <div id="dataView">
        <div class="loading">Loading...</div>
    </div>

    <!-- HANDLEBARS TEMPLATE - MAIN STRUCTURE -->
    <script id="platforms-template" type="text/x-handlebars-template">
        {{#each platforms}}
        <div>
            <div class="platform-header" data-platform-id="{{platformId}}">
                <div>
                    <span>{{platform}} ({{totalItems}} items)</span>
                    <span class="group-status status-{{overallStatus}}">{{uppercase overallStatus}}</span>
                </div>
                <span class="collapse-icon">‚ñ∂</span>
            </div>

            <div class="platform-content" data-platform-content="{{platformId}}">
                {{#each subCategories}}
                <div>
                    <div class="sub-header" data-sub-id="{{subId}}" data-platform="{{../platform}}" data-sub-name="{{name}}">
                        <div>
                            <span>{{name}} ({{count}} items)</span>
                            <span class="group-status status-{{status}}">{{uppercase status}}</span>
                        </div>
                        <span class="collapse-icon">‚ñ∂</span>
                    </div>

                    <div class="sub-content" data-sub-content="{{subId}}">
                        <div class="sub-filters">
                            <label>Search:</label>
                            <input type="text" data-search="{{subId}}" placeholder="Search account, item, etc...">
                            
                            <label>Filter by State:</label>
                            <select data-filter="{{subId}}">
                                <option value="">All States</option>
                                <option value="Healthy">Healthy</option>
                                <option value="Unhealthy">Unhealthy</option>
                            </select>
                        </div>

                        <table>
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Item Type</th>
                                    <th>State</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody data-tbody="{{subId}}">
                            </tbody>
                        </table>

                        <div class="group-pagination" data-pagination="{{subId}}" style="display: none;">
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </script>

    <!-- HANDLEBARS TEMPLATE - TABLE ROWS -->
    <script id="table-rows-template" type="text/x-handlebars-template">
        {{#if items}}
            {{#each items}}
            <tr>
                <td>{{account}}</td>
                <td>{{date}}</td>
                <td>{{item}}</td>
                <td>{{item_type}}</td>
                <td style="color: {{#if (eq state 'Healthy')}}green{{else}}red{{/if}}">{{state}}</td>
                <td>{{reason}}</td>
            </tr>
            {{/each}}
        {{else}}
            <tr><td colspan="6" class="loading">No items found</td></tr>
        {{/if}}
    </script>

    <!-- HANDLEBARS TEMPLATE - PAGINATION -->
    <script id="pagination-template" type="text/x-handlebars-template">
        <button class="pagination-btn pagination-nav" data-page="prev" {{#unless hasPreviousPage}}disabled{{/unless}}>
            &lt; Previous
        </button>
        
        {{#if showFirst}}
            <button class="pagination-btn {{#if (eq currentPage 1)}}active{{/if}}" data-page="1">1</button>
        {{/if}}
        
        {{#if showStartEllipsis}}
            <span class="pagination-ellipsis">...</span>
        {{/if}}
        
        {{#each pageNumbers}}
            <button class="pagination-btn {{#if active}}active{{/if}}" data-page="{{page}}">{{page}}</button>
        {{/each}}
        
        {{#if showEndEllipsis}}
            <span class="pagination-ellipsis">...</span>
        {{/if}}
        
        {{#if showLast}}
            <button class="pagination-btn {{#if (eq currentPage totalPages)}}active{{/if}}" data-page="{{totalPages}}">{{totalPages}}</button>
        {{/if}}
        
        <button class="pagination-btn pagination-nav" data-page="next" {{#unless hasNextPage}}disabled{{/unless}}>
            Next &gt;
        </button>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>

    <script>
        // STATE MANAGEMENT
        const AppState = {
            collapseState: {},
            templates: {},
            groupData: {}
        };

        // HANDLEBARS HELPERS
        Handlebars.registerHelper('eq', function(a, b) {
            return a === b;
        });

        Handlebars.registerHelper('uppercase', function(text) {
            return text ? text.toUpperCase() : '';
        });

        // COMPILE TEMPLATES
        function compileTemplates() {
            AppState.templates.platforms = Handlebars.compile(
                document.getElementById('platforms-template').innerHTML
            );
            AppState.templates.tableRows = Handlebars.compile(
                document.getElementById('table-rows-template').innerHTML
            );
            AppState.templates.pagination = Handlebars.compile(
                document.getElementById('pagination-template').innerHTML
            );
        }

        // API FUNCTIONS
        async function fetchData(params = {}) {
            const queryParams = new URLSearchParams();
            
            Object.keys(params).forEach(key => {
                if (params[key] !== null && params[key] !== undefined && params[key] !== '') {
                    queryParams.append(key, params[key]);
                }
            });

            const endpoint = 'platformmetrics';
            const query = queryParams.toString() ? '?' + queryParams.toString() : '';
            
            try {
                console.log('üì• Fetching:', '/' + endpoint + query);
                const response = await fetch('/' + endpoint + query);
                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(data.error || 'Failed to fetch data');
                }
                
                return data;
            } catch (error) {
                console.error("‚ùå Error fetching data:", error);
                throw error;
            }
        }

        // DATA PROCESSING
        function groupDataByPlatform(data, groupSummary) {
            const grouped = {};
            
            data.forEach(item => {
                const platform = item.platform || 'Unknown';
                const sub = item['sub-category'] || 'Other';
                
                if (!grouped[platform]) {
                    grouped[platform] = {};
                }
                if (!grouped[platform][sub]) {
                    grouped[platform][sub] = [];
                }
                grouped[platform][sub].push(item);
            });

            const platforms = [];
            
            Object.keys(grouped).forEach(platform => {
                const platformId = platform.replace(/[^a-zA-Z0-9]/g, '_');
                const summary = groupSummary.find(g => g.platform === platform);
                const totalItems = Object.values(grouped[platform]).reduce((sum, items) => sum + items.length, 0);
                
                const subCategories = [];
                
                Object.keys(grouped[platform]).forEach(sub => {
                    const subId = (platform + '_' + sub).replace(/[^a-zA-Z0-9]/g, '_');
                    const items = grouped[platform][sub];
                    const hasUnhealthy = items.some(item => item.state === 'Unhealthy');
                    
                    subCategories.push({
                        name: sub,
                        subId: subId,
                        count: items.length,
                        status: hasUnhealthy ? 'unhealthy' : 'healthy'
                    });
                });

                platforms.push({
                    platform: platform,
                    platformId: platformId,
                    totalItems: totalItems,
                    overallStatus: summary ? summary.overallStatus : 'unknown',
                    subCategories: subCategories
                });
            });

            return platforms;
        }

        // PAGINATION HELPER
        function getPaginationData(currentPage, totalPages) {
            const delta = 1; // Number of pages to show on each side of current page
            const pageNumbers = [];
            
            let showFirst = false;
            let showLast = false;
            let showStartEllipsis = false;
            let showEndEllipsis = false;
            
            // Determine which page numbers to show
            let start = Math.max(2, currentPage - delta);
            let end = Math.min(totalPages - 1, currentPage + delta);
            
            // Adjust if we're near the start
            if (currentPage <= delta + 2) {
                start = 2;
                end = Math.min(totalPages - 1, 2 + delta * 2);
            }
            
            // Adjust if we're near the end
            if (currentPage >= totalPages - delta - 1) {
                start = Math.max(2, totalPages - delta * 2 - 1);
                end = totalPages - 1;
            }
            
            // Show first page if not in range
            if (start > 2) {
                showFirst = true;
                showStartEllipsis = true;
            } else if (totalPages > 1) {
                showFirst = true;
            }
            
            // Show last page if not in range
            if (end < totalPages - 1) {
                showLast = true;
                showEndEllipsis = true;
            } else if (totalPages > 1) {
                showLast = true;
            }
            
            // Create page numbers array
            for (let i = start; i <= end; i++) {
                pageNumbers.push({
                    page: i,
                    active: i === currentPage
                });
            }
            
            return {
                pageNumbers,
                showFirst: showFirst && currentPage !== 1,
                showLast: showLast && currentPage !== totalPages,
                showStartEllipsis,
                showEndEllipsis
            };
        }

        // RENDER FUNCTIONS
        function renderPlatforms(platforms) {
            const html = AppState.templates.platforms({ platforms });
            document.getElementById('dataView').innerHTML = html;
            attachEventListeners();
        }

        function renderTableRows(subId, items) {
            const tbody = document.querySelector(`[data-tbody="${subId}"]`);
            if (!tbody) return;
            
            tbody.innerHTML = AppState.templates.tableRows({ items });
        }

        function renderPagination(subId, paginationData, platform, subName) {
            const container = document.querySelector(`[data-pagination="${subId}"]`);
            if (!container || !paginationData) return;
            
            const { currentPage, totalPages, hasNextPage, hasPreviousPage } = paginationData;
            
            if (totalPages <= 1) {
                container.style.display = 'none';
                return;
            }
            
            const paginationInfo = getPaginationData(currentPage, totalPages);
            const templateData = {
                currentPage,
                totalPages,
                hasNextPage,
                hasPreviousPage,
                ...paginationInfo
            };
            
            container.innerHTML = AppState.templates.pagination(templateData);
            container.style.display = 'flex';
            
            // Attach pagination click handlers
            container.querySelectorAll('[data-page]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const pageValue = this.getAttribute('data-page');
                    let targetPage;
                    
                    if (pageValue === 'prev') {
                        targetPage = currentPage - 1;
                    } else if (pageValue === 'next') {
                        targetPage = currentPage + 1;
                    } else {
                        targetPage = parseInt(pageValue);
                    }
                    
                    if (targetPage >= 1 && targetPage <= totalPages) {
                        loadGroupData(platform, subName, subId, targetPage);
                    }
                });
            });
        }

        // LOAD GROUP DATA
        async function loadGroupData(platform, subName, subId, page = 1) {
            const searchInput = document.querySelector(`[data-search="${subId}"]`);
            const filterSelect = document.querySelector(`[data-filter="${subId}"]`);
            
            const search = searchInput ? searchInput.value.trim() : '';
            const state = filterSelect ? filterSelect.value : '';
            
            const tbody = document.querySelector(`[data-tbody="${subId}"]`);
            const pagination = document.querySelector(`[data-pagination="${subId}"]`);
            
            if (!tbody) return;

            tbody.innerHTML = '<tr><td colspan="6" class="loading">Loading...</td></tr>';

            try {
                const params = {
                    platform: platform,
                    'sub-category': subName,
                    page: page,
                    limit: 10
                };

                if (search) params.search = search;
                if (state) params.state = state;

                const result = await fetchData(params);
                
                renderTableRows(subId, result.data);
                renderPagination(subId, result.pagination, platform, subName);

            } catch (error) {
                console.error("‚ùå Error loading data:", error);
                tbody.innerHTML = `<tr><td colspan="6" class="loading">Error: ${error.message}</td></tr>`;
                if (pagination) pagination.style.display = 'none';
            }
        }

        // EVENT LISTENERS
        function attachEventListeners() {
            // Platform headers
            document.querySelectorAll('[data-platform-id]').forEach(header => {
                header.addEventListener('click', function() {
                    const platformId = this.getAttribute('data-platform-id');
                    togglePlatform(platformId);
                });
            });
            
            // Sub-category headers
            document.querySelectorAll('[data-sub-id]').forEach(header => {
                header.addEventListener('click', function() {
                    const subId = this.getAttribute('data-sub-id');
                    const platform = this.getAttribute('data-platform');
                    const subName = this.getAttribute('data-sub-name');
                    toggleSubCategory(platform, subName, subId);
                });
            });
            
            // Search inputs
            document.querySelectorAll('[data-search]').forEach(input => {
                input.addEventListener('keyup', function() {
                    const subId = this.getAttribute('data-search');
                    const subHeader = document.querySelector(`[data-sub-id="${subId}"]`);
                    const platform = subHeader.getAttribute('data-platform');
                    const subName = subHeader.getAttribute('data-sub-name');
                    loadGroupData(platform, subName, subId, 1);
                });
            });
            
            // Filter selects
            document.querySelectorAll('[data-filter]').forEach(select => {
                select.addEventListener('change', function() {
                    const subId = this.getAttribute('data-filter');
                    const subHeader = document.querySelector(`[data-sub-id="${subId}"]`);
                    const platform = subHeader.getAttribute('data-platform');
                    const subName = subHeader.getAttribute('data-sub-name');
                    loadGroupData(platform, subName, subId, 1);
                });
            });
        }

        // TOGGLE FUNCTIONS
        function togglePlatform(platformId) {
            const key = `platform_${platformId}`;
            AppState.collapseState[key] = !AppState.collapseState[key];
            
            const content = document.querySelector(`[data-platform-content="${platformId}"]`);
            const icon = document.querySelector(`[data-platform-id="${platformId}"] .collapse-icon`);
            
            if (AppState.collapseState[key]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        function toggleSubCategory(platform, subName, subId) {
            const key = `sub_${subId}`;
            AppState.collapseState[key] = !AppState.collapseState[key];
            
            const content = document.querySelector(`[data-sub-content="${subId}"]`);
            const icon = document.querySelector(`[data-sub-id="${subId}"] .collapse-icon`);
            
            if (AppState.collapseState[key]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
                
                // Load data if not loaded yet
                const tbody = document.querySelector(`[data-tbody="${subId}"]`);
                if (tbody && tbody.childElementCount === 0) {
                    loadGroupData(platform, subName, subId, 1);
                }
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // INITIALIZATION
        async function initialize() {
            try {
                compileTemplates();
                
                const result = await fetchData({ limit: 0 });
                
                if (!result.data || result.data.length === 0) {
                    document.getElementById('dataView').innerHTML = '<div class="loading">No data found</div>';
                    return;
                }
                
                const platforms = groupDataByPlatform(result.data, result.groupSummary);
                renderPlatforms(platforms);
                
            } catch (error) {
                console.error('‚ùå Init error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Error: ${error.message}</div>`;
            }
        }

        // START APPLICATION
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Application starting...');
            initialize();
        });
    </script>
</body>
</html>
