<!DOCTYPE html>
<html>
<head>
    <title>Platform Metrics</title>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/datatables.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }
        
        th {
            background-color: #870e40;
            color: #f2f2f2;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        /* COLLAPSE STYLING */
        .platform-header {
            background-color: #f5f5f5;
            cursor: pointer;
            padding: 15px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            margin-top: 10px;
        }

        .platform-header:hover {
            background-color: #e9ecef;
        }

        .sub-header {
            background-color: #f8f9fa;
            cursor: pointer;
            padding: 12px;
            padding-left: 30px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 3px solid #ddd;
            margin: 5px 0;
        }

        .sub-header:hover {
            background-color: #e9ecef;
        }

        .collapse-icon {
            font-size: 14px;
            margin-left: 10px;
        }

        .platform-content {
            display: none;
        }

        .platform-content.expanded {
            display: block;
        }

        .sub-content {
            display: none;
            margin-left: 20px;
            margin-bottom: 10px;
        }

        .sub-content.expanded {
            display: block;
        }

        .group-status {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: 10px;
            font-weight: bold;
        }

        .status-healthy {
            background-color: green;
            color: white;
        }

        .status-unhealthy {
            background-color: red;
            color: white;
        }

        /* SEARCH & FILTER STYLING */
        .sub-filters {
            background-color: #f8f9fa;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .sub-filters label {
            font-weight: bold;
            margin: 0;
        }

        .sub-filters input,
        .sub-filters select {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .sub-filters input {
            flex: 1;
            max-width: 300px;
        }

        .no-results {
            text-align: center;
            padding: 20px;
            color: #999;
            font-style: italic;
        }

        /* PAGINATION STYLING */
        .pagination-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-top: 15px;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 4px;
        }

        .pagination-btn {
            padding: 8px 12px;
            border: 1px solid #ddd;
            background-color: #fff;
            color: #333;
            cursor: pointer;
            border-radius: 4px;
            font-size: 14px;
            transition: all 0.2s;
        }

        .pagination-btn:hover:not(:disabled) {
            background-color: #e9ecef;
            border-color: #999;
        }

        .pagination-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .pagination-btn.active {
            background-color: #870e40;
            color: white;
            border-color: #870e40;
            font-weight: bold;
        }

        .pagination-info {
            font-size: 13px;
            color: #666;
            margin: 0 10px;
        }

        .pagination-loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #870e40;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <h4 class="partialHeader">Platform Metrics</h4>

    <div id="dataView">
        <div class="loading">Loading...</div>
    </div>

    <!-- HANDLEBARS TEMPLATE -->
    <script id="nested-template" type="text/x-handlebars-template">
        \{{#each platforms}}
        <div>
            <!-- PLATFORM HEADER -->
            <div class="platform-header" onclick="togglePlatform('\{{this.platformId}}')">
                <div>
                    <span>\{{this.platform}} (\{{this.totalItems}} items)</span>
                    <span class="group-status status-\{{this.overallStatus}}">\{{uppercase this.overallStatus}}</span>
                </div>
                <span class="collapse-icon" id="icon-\{{this.platformId}}">‚ñ∂</span>
            </div>

            <!-- PLATFORM CONTENT -->
            <div class="platform-content" id="content-\{{this.platformId}}">
                \{{#each this.subCategories}}
                <div>
                    <!-- SUB-CATEGORY HEADER WITH STATUS -->
                    <div class="sub-header" onclick="toggleSub('\{{../this.platformId}}', '\{{this.subId}}')">
                        <div>
                            <span>\{{this.name}} (\{{this.totalCount}} items)</span>
                            <span class="group-status status-\{{this.status}}">\{{uppercase this.status}}</span>
                        </div>
                        <span class="collapse-icon" id="icon-\{{this.subId}}">‚ñ∂</span>
                    </div>

                    <!-- SUB-CATEGORY CONTENT -->
                    <div class="sub-content" id="content-\{{this.subId}}">
                        <!-- SEARCH & FILTER -->
                        <div class="sub-filters">
                            <label>Search:</label>
                            <input type="text" id="search-\{{this.subId}}" placeholder="Search account, item, etc..." onkeyup="debounceSearch('\{{this.subId}}')">
                            
                            <label>Filter by State:</label>
                            <select id="filter-\{{this.subId}}" onchange="applyFilterAndSearch('\{{this.subId}}')">
                                <option value="">All States</option>
                                <option value="Healthy">Healthy</option>
                                <option value="Unhealthy">Unhealthy</option>
                            </select>
                        </div>

                        <!-- TABLE -->
                        <table>
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Item Type</th>
                                    <th>State</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody id="tbody-\{{this.subId}}">
                                \{{#each this.items}}
                                <tr class="data-row" data-search="\{{this.account}} \{{this.item}}" data-state="\{{this.state}}">
                                    <td>\{{this.account}}</td>
                                    <td>\{{this.date}}</td>
                                    <td>\{{this.item}}</td>
                                    <td>\{{this.item_type}}</td>
                                    <td style="color: \{{#if (eq this.state 'Healthy')}}green\{{else}}red\{{/if}}">\{{this.state}}</td>
                                    <td>\{{this.reason}}</td>
                                </tr>
                                \{{/each}}
                            </tbody>
                        </table>

                        <!-- PAGINATION -->
                        <div class="pagination-container" id="pagination-\{{this.subId}}">
                            <button class="pagination-btn" onclick="goToPage('\{{this.subId}}', 1)" title="First page">‚èÆ</button>
                            <button class="pagination-btn" onclick="goToPage('\{{this.subId}}', currentPage['\{{this.subId}}'] - 1)" title="Previous page">‚óÄ Previous</button>
                            <span id="page-buttons-\{{this.subId}}" class="page-buttons"></span>
                            <button class="pagination-btn" onclick="goToPage('\{{this.subId}}', currentPage['\{{this.subId}}'] + 1)" title="Next page">Next ‚ñ∂</button>
                            <button class="pagination-btn" onclick="goToPage('\{{this.subId}}', totalPages['\{{this.subId}}'])" title="Last page">‚è≠</button>
                            <span class="pagination-info" id="page-info-\{{this.subId}}"></span>
                        </div>
                    </div>
                </div>
                \{{/each}}
            </div>
        </div>
        \{{/each}}
    </script>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>

    <script>
        // STATE
        let collapseState = {};
        let currentPage = {};
        let totalPages = {};
        let subCategoryMetadata = {}; // Store metadata: { platform, subCategory, totalCount, etc }
        let searchTimeout = {};
        const itemsPerPage = 10;

        // HANDLEBARS HELPERS
        Handlebars.registerHelper('eq', function(a, b) {
            return a === b;
        });

        Handlebars.registerHelper('uppercase', function(text) {
            return text ? text.toUpperCase() : '';
        });

        // FETCH DATA - INITIAL LOAD
        async function fetchData() {
            try {
                console.log('üì• Fetching data...');
                const response = await fetch('/platformmetrics');
                const result = await response.json();
                
                console.log('‚úÖ API Response:', result);
                
                if (!result.success) {
                    throw new Error(result.error || 'Failed to fetch');
                }
                
                return result;
            } catch (error) {
                console.error('‚ùå Fetch error:', error);
                throw error;
            }
        }

        // FETCH DATA - SERVER-SIDE PAGINATION
        async function fetchPageData(platform, subCategory, page = 1, search = '', filterState = '') {
            try {
                console.log(`üì• Fetching page data: platform=${platform}, sub=${subCategory}, page=${page}`);
                
                const params = new URLSearchParams({
                    platform: platform,
                    subCategory: subCategory,
                    page: page,
                    limit: itemsPerPage,
                    search: search,
                    filterState: filterState
                });
                
                const response = await fetch(`/platformmetrics/page?${params}`);
                const result = await response.json();
                
                if (!result.success) {
                    throw new Error(result.error || 'Failed to fetch page data');
                }
                
                console.log(`‚úÖ Page data received:`, result);
                return result;
                
            } catch (error) {
                console.error('‚ùå Page fetch error:', error);
                throw error;
            }
        }

        // GROUP DATA - INITIAL STRUCTURE
        function groupData(data, groupSummary) {
            console.log('üî® Grouping data...');
            
            const grouped = {};
            data.forEach(item => {
                const platform = item.platform || 'Unknown';
                const sub = item['sub-category'] || 'Other';
                
                if (!grouped[platform]) {
                    grouped[platform] = {};
                }
                if (!grouped[platform][sub]) {
                    grouped[platform][sub] = [];
                }
                grouped[platform][sub].push(item);
            });

            const platforms = [];
            Object.keys(grouped).forEach(platform => {
                const platformId = platform.replace(/[^a-zA-Z0-9]/g, '_');
                const summary = groupSummary.find(g => g.platform === platform);
                const totalItems = Object.values(grouped[platform]).reduce((sum, items) => sum + items.length, 0);
                
                const subCategories = [];
                Object.keys(grouped[platform]).forEach(sub => {
                    const subId = (platform + '_' + sub).replace(/[^a-zA-Z0-9]/g, '_');
                    const items = grouped[platform][sub];
                    
                    const hasUnhealthy = items.some(item => item.state === 'Unhealthy');
                    const subStatus = hasUnhealthy ? 'unhealthy' : 'healthy';
                    
                    // Initialize pagination state
                    currentPage[subId] = 1;
                    totalPages[subId] = 1;
                    subCategoryMetadata[subId] = {
                        platform: platform,
                        subCategory: sub,
                        totalCount: items.length,
                        status: subStatus
                    };
                    
                    console.log(`  Sub: ${sub} => ${subStatus}`);
                    
                    const firstPageItems = items.slice(0, itemsPerPage);
                    
                    subCategories.push({
                        name: sub,
                        subId: subId,
                        count: itemsPerPage,
                        totalCount: items.length,
                        status: subStatus,
                        items: firstPageItems
                    });
                });

                platforms.push({
                    platform: platform,
                    platformId: platformId,
                    totalItems: totalItems,
                    overallStatus: summary ? summary.overallStatus : 'unknown',
                    subCategories: subCategories
                });
            });

            console.log('‚úÖ Grouped structure:', platforms);
            return platforms;
        }

        // RENDER WITH HANDLEBARS
        function renderNested(platforms) {
            console.log('üìä Rendering nested structure...');
            
            try {
                const source = document.getElementById('nested-template').innerHTML;
                const template = Handlebars.compile(source);
                const html = template({ platforms });
                
                document.getElementById('dataView').innerHTML = html;
                
                Object.keys(totalPages).forEach(subId => {
                    updatePaginationUI(subId);
                });
                
                console.log('‚úÖ Nested structure rendered!');
            } catch (error) {
                console.error('‚ùå Template error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Template error: ${error.message}</div>`;
            }
        }

        // UPDATE PAGINATION UI
        function updatePaginationUI(subId) {
            const pageButtonsContainer = document.getElementById(`page-buttons-${subId}`);
            const pageInfoSpan = document.getElementById(`page-info-${subId}`);
            
            if (!pageButtonsContainer || !pageInfoSpan) return;
            
            const totalPagesCount = totalPages[subId] || 1;
            const currentPageNum = currentPage[subId] || 1;
            const metadata = subCategoryMetadata[subId];
            const totalItems = metadata?.totalCount || 0;
            
            // Generate page buttons
            let pageHTML = '';
            const maxVisiblePages = 7;
            let startPage = Math.max(1, currentPageNum - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPagesCount, startPage + maxVisiblePages - 1);
            
            if (endPage - startPage + 1 < maxVisiblePages) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }
            
            for (let i = startPage; i <= endPage; i++) {
                const activeClass = i === currentPageNum ? 'active' : '';
                pageHTML += `<button class="pagination-btn ${activeClass}" onclick="goToPage('${subId}', ${i})">${i}</button>`;
            }
            
            pageButtonsContainer.innerHTML = pageHTML;
            
            // Update page info
            const startItem = (currentPageNum - 1) * itemsPerPage + 1;
            const endItem = Math.min(currentPageNum * itemsPerPage, totalItems);
            pageInfoSpan.textContent = `${startItem}-${endItem} of ${totalItems}`;
            
            updateNavigationButtons(subId);
        }

        // UPDATE NAVIGATION BUTTONS
        function updateNavigationButtons(subId) {
            const container = document.getElementById(`pagination-${subId}`);
            if (!container) return;
            
            const currentPageNum = currentPage[subId];
            const totalPagesCount = totalPages[subId];
            
            const buttons = container.querySelectorAll('.pagination-btn');
            buttons.forEach((btn, idx) => {
                if (idx === 0 || idx === 1) {
                    btn.disabled = currentPageNum === 1;
                } else if (idx === buttons.length - 2 || idx === buttons.length - 1) {
                    btn.disabled = currentPageNum === totalPagesCount;
                }
            });
        }

        // GO TO PAGE
        async function goToPage(subId, pageNum) {
            const metadata = subCategoryMetadata[subId];
            if (!metadata) return;
            
            const totalPagesCount = totalPages[subId];
            
            if (pageNum < 1) pageNum = 1;
            if (pageNum > totalPagesCount) pageNum = totalPagesCount;
            
            currentPage[subId] = pageNum;
            
            console.log(`üìÑ Go to page ${pageNum} for ${subId}`);
            
            try {
                // Get filter values
                const searchInput = document.getElementById(`search-${subId}`);
                const filterSelect = document.getElementById(`filter-${subId}`);
                const search = searchInput?.value?.toLowerCase().trim() || '';
                const filterState = filterSelect?.value || '';
                
                // Fetch page data from server
                const result = await fetchPageData(
                    metadata.platform,
                    metadata.subCategory,
                    pageNum,
                    search,
                    filterState
                );
                
                // Update total pages from server response
                totalPages[subId] = result.pagination?.totalPages || 1;
                
                // Update table
                const tbody = document.getElementById(`tbody-${subId}`);
                if (tbody) {
                    tbody.innerHTML = '';
                    result.data.forEach(item => {
                        const row = document.createElement('tr');
                        row.className = 'data-row';
                        row.setAttribute('data-search', `${item.account} ${item.item}`.toLowerCase());
                        row.setAttribute('data-state', item.state);
                        row.innerHTML = `
                            <td>${item.account}</td>
                            <td>${item.date}</td>
                            <td>${item.item}</td>
                            <td>${item.item_type}</td>
                            <td style="color: ${item.state === 'Healthy' ? 'green' : 'red'}">${item.state}</td>
                            <td>${item.reason}</td>
                        `;
                        tbody.appendChild(row);
                    });
                }
                
                // Update pagination UI
                updatePaginationUI(subId);
                
            } catch (error) {
                console.error('‚ùå Error going to page:', error);
                alert('Error loading page: ' + error.message);
            }
        }

        // DEBOUNCE SEARCH
        function debounceSearch(subId) {
            clearTimeout(searchTimeout[subId]);
            searchTimeout[subId] = setTimeout(() => {
                applyFilterAndSearch(subId);
            }, 500);
        }

        // APPLY FILTER & SEARCH
        async function applyFilterAndSearch(subId) {
            console.log('üîç Applying filter and search for:', subId);
            
            const searchInput = document.getElementById(`search-${subId}`);
            const filterSelect = document.getElementById(`filter-${subId}`);
            
            if (!searchInput || !filterSelect) {
                console.warn('‚ùå Elements not found');
                return;
            }
            
            const searchText = searchInput.value.toLowerCase().trim();
            const filterState = filterSelect.value;
            
            console.log('  Search text:', searchText);
            console.log('  Filter state:', filterState);
            
            // Reset to page 1 when applying filters
            currentPage[subId] = 1;
            
            try {
                const result = await goToPage(subId, 1);
            } catch (error) {
                console.error('‚ùå Filter error:', error);
            }
        }

        // TOGGLE PLATFORM
        function togglePlatform(platformId) {
            console.log('üîΩ Toggle platform:', platformId);
            
            collapseState[platformId] = !collapseState[platformId];
            const content = document.getElementById('content-' + platformId);
            const icon = document.getElementById('icon-' + platformId);
            
            if (collapseState[platformId]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // TOGGLE SUB-CATEGORY
        function toggleSub(platformId, subId) {
            console.log('üîΩ Toggle sub:', platformId, subId);
            
            const key = platformId + '_' + subId;
            collapseState[key] = !collapseState[key];
            const content = document.getElementById('content-' + subId);
            const icon = document.getElementById('icon-' + subId);
            
            if (collapseState[key]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // MAIN FUNCTION
        async function init() {
            try {
                const result = await fetchData();
                
                if (!result.data || result.data.length === 0) {
                    document.getElementById('dataView').innerHTML = '<div class="loading">No data found</div>';
                    return;
                }
                
                console.log('üì¶ Got', result.data.length, 'items');
                
                const platforms = groupData(result.data, result.groupSummary);
                renderNested(platforms);
                
            } catch (error) {
                console.error('‚ùå Init error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Error: ${error.message}</div>`;
            }
        }

        // START
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Page loaded...');
            init();
        });
    </script>
</body>
</html>
