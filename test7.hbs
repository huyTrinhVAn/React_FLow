<!DOCTYPE html>
<html>
<head>
    <title>Platform Metrics</title>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/datatables.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }
        
        th {
            background-color: #870e40;
            color: #f2f2f2;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }
    </style>
</head>
<body>
    <h4 class="partialHeader">Platform Metrics</h4>

    <div id="dataView">
        <div class="loading">Loading...</div>
    </div>

    <!-- HANDLEBARS TEMPLATE -->
    <script id="data-template" type="text/x-handlebars-template">
        <table>
            <thead>
                <tr>
                    <th>Platform</th>
                    <th>Sub-Category</th>
                    <th>Account</th>
                    <th>Date</th>
                    <th>Item</th>
                    <th>Item Type</th>
                    <th>State</th>
                    <th>Reason</th>
                </tr>
            </thead>
            <tbody>
                \{{#each items}}
                <tr>
                    <td>\{{this.platform}}</td>
                    <td>\{{this.sub-category}}</td>
                    <td>\{{this.account}}</td>
                    <td>\{{this.date}}</td>
                    <td>\{{this.item}}</td>
                    <td>\{{this.item_type}}</td>
                    <td style="color: \{{#if (eq this.state 'Healthy')}}green\{{else}}red\{{/if}}">\{{this.state}}</td>
                    <td>\{{this.reason}}</td>
                </tr>
                \{{/each}}
            </tbody>
        </table>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>

    <script>
        // HANDLEBARS HELPER
        Handlebars.registerHelper('eq', function(a, b) {
            return a === b;
        });

        // FETCH DATA
        async function fetchData() {
            try {
                console.log('üì• Fetching data from /platformmetrics...');
                const response = await fetch('/platformmetrics');
                const result = await response.json();
                
                console.log('‚úÖ API Response:', result);
                
                if (!result.success) {
                    throw new Error(result.error || 'Failed to fetch');
                }
                
                return result;
            } catch (error) {
                console.error('‚ùå Fetch error:', error);
                throw error;
            }
        }

        // RENDER WITH HANDLEBARS
        function renderTable(data) {
            console.log('üìä Rendering', data.length, 'items with Handlebars...');
            
            try {
                const source = document.getElementById('data-template').innerHTML;
                const template = Handlebars.compile(source);
                const html = template({ items: data });
                
                document.getElementById('dataView').innerHTML = html;
                console.log('‚úÖ Table rendered successfully!');
            } catch (error) {
                console.error('‚ùå Template error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Template error: ${error.message}</div>`;
            }
        }

        // MAIN FUNCTION
        async function init() {
            try {
                const result = await fetchData();
                
                if (!result.data || result.data.length === 0) {
                    document.getElementById('dataView').innerHTML = '<div class="loading">No data found</div>';
                    return;
                }
                
                console.log('üì¶ Got', result.data.length, 'items from API');
                renderTable(result.data);
                
            } catch (error) {
                console.error('‚ùå Init error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Error: ${error.message}</div>`;
            }
        }

        // START
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Page loaded, starting...');
            init();
        });
    </script>
</body>
</html>
