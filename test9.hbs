<!DOCTYPE html>
<html>
<head>
    <title>Platform Metrics</title>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/datatables.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }
        
        th {
            background-color: #870e40;
            color: #f2f2f2;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        .platform-header {
            background-color: #f5f5f5;
            cursor: pointer;
            padding: 15px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            margin-top: 10px;
        }

        .platform-header:hover {
            background-color: #e9ecef;
        }

        .sub-header {
            background-color: #f8f9fa;
            cursor: pointer;
            padding: 12px;
            padding-left: 30px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 3px solid #ddd;
            margin: 5px 0;
        }

        .sub-header:hover {
            background-color: #e9ecef;
        }

        .collapse-icon {
            font-size: 14px;
            margin-left: 10px;
        }

        .platform-content {
            display: none;
        }

        .platform-content.expanded {
            display: block;
        }

        .sub-content {
            display: none;
            margin-left: 20px;
            margin-bottom: 10px;
        }

        .sub-content.expanded {
            display: block;
        }

        .group-status {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: 10px;
            font-weight: bold;
        }

        .status-healthy {
            background-color: green;
            color: white;
        }

        .status-unhealthy {
            background-color: red;
            color: white;
        }

        .sub-filters {
            background-color: #f8f9fa;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
        }

        .sub-filters label {
            font-weight: bold;
            margin: 0;
        }

        .sub-filters input,
        .sub-filters select {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .sub-filters input {
            flex: 1;
            min-width: 200px;
        }

        .pagination-wrapper {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin-top: 15px;
            gap: 10px;
            align-items: center;
        }

        .pagination-info {
            width: 100%;
            text-align: center;
            font-size: 13px;
            color: #666;
        }

        .pagination-controls {
            display: flex;
            justify-content: center;
            gap: 5px;
            flex-wrap: wrap;
            align-items: center;
        }

        .pagination-controls button {
            padding: 8px 12px;
            border: 1px solid #ddd;
            background-color: #fff;
            cursor: pointer;
            border-radius: 4px;
            font-size: 13px;
            min-width: 35px;
            text-align: center;
            transition: all 0.2s;
        }

        .pagination-controls button:hover:not(:disabled) {
            background-color: #f5f5f5;
            border-color: #999;
        }

        .pagination-controls button:disabled {
            background-color: #f9f9f9;
            color: #ccc;
            cursor: not-allowed;
            border-color: #ddd;
        }

        .ellipsis {
            padding: 8px 5px;
            cursor: default;
            color: #999;
        }
    </style>
</head>
<body>
    <h4 class="partialHeader">Platform Metrics</h4>

    <div id="dataView">
        <div class="loading">Loading...</div>
    </div>

    <!-- HANDLEBARS TEMPLATE -->
    <script id="nested-template" type="text/x-handlebars-template">
        \{{#each platforms}}
        <div>
            <!-- PLATFORM HEADER -->
            <div class="platform-header" onclick="togglePlatform('\{{this.platformId}}')">
                <div>
                    <span>\{{this.platform}} (\{{this.totalItems}} items)</span>
                    <span class="group-status status-\{{this.overallStatus}}">\{{uppercase this.overallStatus}}</span>
                </div>
                <span class="collapse-icon" id="icon-\{{this.platformId}}">‚ñ∂</span>
            </div>

            <!-- PLATFORM CONTENT -->
            <div class="platform-content" id="content-\{{this.platformId}}">
                \{{#each this.subCategories}}
                <div>
                    <!-- SUB-CATEGORY HEADER WITH STATUS -->
                    <div class="sub-header" onclick="toggleSub('\{{../this.platform}}', '\{{this.name}}', '\{{this.subId}}')">
                        <div>
                            <span>\{{this.name}} (\{{this.count}} items)</span>
                            <span class="group-status status-\{{this.status}}">\{{uppercase this.status}}</span>
                        </div>
                        <span class="collapse-icon" id="icon-\{{this.subId}}">‚ñ∂</span>
                    </div>

                    <!-- SUB-CATEGORY CONTENT -->
                    <div class="sub-content" id="content-\{{this.subId}}">
                        <!-- SEARCH & FILTER -->
                        <div class="sub-filters">
                            <label>Search:</label>
                            <input type="text" id="search-\{{this.subId}}" placeholder="Search account, item, etc..." onkeyup="applyFilterAndSearch('\{{../this.platform}}', '\{{this.name}}', '\{{this.subId}}')">
                            
                            <label>Filter by State:</label>
                            <select id="filter-\{{this.subId}}" onchange="applyFilterAndSearch('\{{../this.platform}}', '\{{this.name}}', '\{{this.subId}}')">
                                <option value="">All States</option>
                                <option value="Healthy">Healthy</option>
                                <option value="Unhealthy">Unhealthy</option>
                            </select>
                        </div>

                        <!-- TABLE -->
                        <table>
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Item Type</th>
                                    <th>State</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody id="tbody-\{{this.subId}}">
                                <!-- Data will be loaded here -->
                            </tbody>
                        </table>

                        <!-- PAGINATION CONTROLS -->
                        <div class="pagination-wrapper" id="pagination-\{{this.subId}}">
                            <!-- Pagination will be rendered here -->
                        </div>
                    </div>
                </div>
                \{{/each}}
            </div>
        </div>
        \{{/each}}
    </script>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>

    <script>
        // ============================================
        // STATE MANAGEMENT
        // ============================================
        let collapseState = {};
        let subDataState = {}; // L∆∞u platform, sub, search, filter cho m·ªói sub

        // ============================================
        // HANDLEBARS HELPERS
        // ============================================
        Handlebars.registerHelper('eq', function(a, b) {
            return a === b;
        });

        Handlebars.registerHelper('uppercase', function(text) {
            return text ? text.toUpperCase() : '';
        });

        // ============================================
        // FETCH DATA - INITIAL LOAD
        // ============================================
        async function fetchInitialData() {
            try {
                console.log('üì• Fetching initial data...');
                const response = await fetch('/platformmetrics');
                const result = await response.json();
                
                console.log('‚úÖ API Response:', result);
                
                if (!result.success) {
                    throw new Error(result.error || 'Failed to fetch');
                }
                
                return result;
            } catch (error) {
                console.error('‚ùå Fetch error:', error);
                throw error;
            }
        }

        // ============================================
        // FETCH SUB-CATEGORY DATA - PAGINATION
        // ============================================
        async function fetchSubCategoryData(platform, subCategory, page = 1, search = '', state = '') {
            try {
                console.log('üì• Fetching sub data:', {platform, subCategory, page, search, state});
                
                const params = new URLSearchParams({
                    platform: platform,
                    'sub-category': subCategory,
                    page: page,
                    limit: 10
                });

                if (search) params.append('search', search);
                if (state) params.append('state', state);

                const response = await fetch(`/platformmetrics?${params.toString()}`);
                const result = await response.json();
                
                console.log('‚úÖ Sub data response:', result);
                
                if (!result.success) {
                    throw new Error(result.error || 'Failed to fetch sub data');
                }
                
                return result;
            } catch (error) {
                console.error('‚ùå Sub data fetch error:', error);
                throw error;
            }
        }

        // ============================================
        // GROUP DATA
        // ============================================
        function groupData(data, groupSummary) {
            console.log('üî® Grouping data for initial structure...');
            
            const grouped = {};
            data.forEach(item => {
                const platform = item.platform || 'Unknown';
                const sub = item['sub-category'] || 'Other';
                
                if (!grouped[platform]) {
                    grouped[platform] = {};
                }
                if (!grouped[platform][sub]) {
                    grouped[platform][sub] = [];
                }
                grouped[platform][sub].push(item);
            });

            const platforms = [];
            Object.keys(grouped).forEach(platform => {
                const platformId = platform.replace(/[^a-zA-Z0-9]/g, '_');
                const summary = groupSummary.find(g => g.platform === platform);
                const totalItems = Object.values(grouped[platform]).reduce((sum, items) => sum + items.length, 0);
                
                const subCategories = [];
                Object.keys(grouped[platform]).forEach(sub => {
                    const subId = (platform + '_' + sub).replace(/[^a-zA-Z0-9]/g, '_');
                    const items = grouped[platform][sub];
                    
                    const hasUnhealthy = items.some(item => item.state === 'Unhealthy');
                    const subStatus = hasUnhealthy ? 'unhealthy' : 'healthy';
                    
                    subCategories.push({
                        name: sub,
                        subId: subId,
                        count: items.length,
                        status: subStatus
                    });
                });

                platforms.push({
                    platform: platform,
                    platformId: platformId,
                    totalItems: totalItems,
                    overallStatus: summary ? summary.overallStatus : 'unknown',
                    subCategories: subCategories
                });
            });

            console.log('‚úÖ Grouped structure:', platforms);
            return platforms;
        }

        // ============================================
        // RENDER TEMPLATE (STRUCTURE ONLY)
        // ============================================
        function renderNested(platforms) {
            console.log('üìä Rendering nested structure...');
            
            try {
                const source = document.getElementById('nested-template').innerHTML;
                const template = Handlebars.compile(source);
                const html = template({ platforms });
                
                document.getElementById('dataView').innerHTML = html;
                console.log('‚úÖ Nested structure rendered!');
            } catch (error) {
                console.error('‚ùå Template error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Template error: ${error.message}</div>`;
            }
        }

        // ============================================
        // TOGGLE PLATFORM
        // ============================================
        function togglePlatform(platformId) {
            console.log('üîΩ Toggle platform:', platformId);
            
            collapseState[platformId] = !collapseState[platformId];
            const content = document.getElementById('content-' + platformId);
            const icon = document.getElementById('icon-' + platformId);
            
            if (collapseState[platformId]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // ============================================
        // TOGGLE SUB-CATEGORY & LOAD DATA
        // ============================================
        async function toggleSub(platform, subCategory, subId) {
            console.log('üîΩ Toggle sub:', {platform, subCategory, subId});
            
            const content = document.getElementById('content-' + subId);
            const icon = document.getElementById('icon-' + subId);
            
            if (!content) return;
            
            const isExpanded = content.classList.contains('expanded');
            
            if (!isExpanded) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
                
                // Load data from backend
                const tbody = document.getElementById('tbody-' + subId);
                if (tbody && tbody.innerHTML === '') {
                    setTimeout(async () => {
                        console.log('‚è±Ô∏è Loading sub data on expand...');
                        await loadSubData(platform, subCategory, subId, 1);
                    }, 50);
                }
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // ============================================
        // LOAD SUB DATA (PAGE 1 OR SPECIFIC PAGE)
        // ============================================
        async function loadSubData(platform, subCategory, subId, page = 1) {
            console.log('üì• Loading sub data for page:', page);
            
            const tbody = document.getElementById('tbody-' + subId);
            const paginationContainer = document.getElementById('pagination-' + subId);
            const searchInput = document.getElementById('search-' + subId);
            const filterSelect = document.getElementById('filter-' + subId);
            
            if (!tbody || !paginationContainer) {
                console.error('‚ùå Elements not found');
                return;
            }
            
            const search = searchInput ? searchInput.value.trim() : '';
            const state = filterSelect ? filterSelect.value : '';
            
            // Save state
            subDataState[subId] = {platform, subCategory, search, state};
            
            tbody.innerHTML = '<tr><td colspan="6" class="loading">Loading...</td></tr>';
            
            try {
                const data = await fetchSubCategoryData(platform, subCategory, page, search, state);
                
                tbody.innerHTML = '';
                
                if (!data.data || data.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; color: #666; padding: 20px;">No items found</td></tr>';
                    paginationContainer.innerHTML = '';
                    return;
                }
                
                // Render rows
                data.data.forEach(item => {
                    const row = document.createElement('tr');
                    const statusColor = item.state === 'Healthy' ? 'green' : 'red';
                    row.innerHTML = `
                        <td>${item.account || ''}</td>
                        <td>${item.date || ''}</td>
                        <td>${item.item || ''}</td>
                        <td>${item.item_type || ''}</td>
                        <td style="color: ${statusColor}">${item.state || ''}</td>
                        <td>${item.reason || ''}</td>
                    `;
                    tbody.appendChild(row);
                });
                
                // Render pagination
                renderPaginationButtons(platform, subCategory, subId, data.pagination);
                
                console.log('‚úÖ Sub data loaded successfully');
                
            } catch (error) {
                console.error('‚ùå Load sub data error:', error);
                tbody.innerHTML = `<tr><td colspan="6" style="text-align: center; color: red; padding: 20px;">Error: ${error.message}</td></tr>`;
                paginationContainer.innerHTML = '';
            }
        }

        // ============================================
        // RENDER PAGINATION BUTTONS
        // ============================================
        function renderPaginationButtons(platform, subCategory, subId, paginationData) {
            console.log('üìÑ Rendering pagination buttons:', paginationData);
            
            const paginationContainer = document.getElementById('pagination-' + subId);
            
            if (!paginationContainer) {
                console.error('‚ùå Pagination container not found');
                return;
            }

            const { currentPage, totalPages, totalItems, itemsPerPage, hasNextPage, hasPreviousPage } = paginationData;
            
            if (totalPages <= 1) {
                console.log('  ‚ÑπÔ∏è Only 1 page, hiding pagination');
                paginationContainer.innerHTML = '';
                return;
            }

            const startItem = totalItems > 0 ? ((currentPage - 1) * itemsPerPage) + 1 : 0;
            const endItem = Math.min(currentPage * itemsPerPage, totalItems);

            let html = `<div class="pagination-info">Showing ${startItem}-${endItem} of ${totalItems} items</div>`;
            html += '<div class="pagination-controls">';

            // Previous button
            html += `<button onclick="loadSubData('${platform}', '${subCategory}', '${subId}', ${currentPage - 1})" ${!hasPreviousPage ? 'disabled' : ''}>‚óÄ Previous</button>`;

            // Page numbers
            let startPage = Math.max(1, currentPage - 1);
            let endPage = Math.min(totalPages, currentPage + 1);

            if (startPage > 1) {
                html += `<button onclick="loadSubData('${platform}', '${subCategory}', '${subId}', 1)">1</button>`;
                if (startPage > 2) {
                    html += `<span class="ellipsis">...</span>`;
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                const isActive = i === currentPage;
                const bgColor = isActive ? '#870e40' : '#fff';
                const color = isActive ? 'white' : 'black';
                const borderColor = isActive ? '#870e40' : '#ddd';
                
                html += `<button onclick="loadSubData('${platform}', '${subCategory}', '${subId}', ${i})" style="background-color: ${bgColor}; color: ${color}; border: 1px solid ${borderColor}; font-weight: ${isActive ? 'bold' : 'normal'};">${i}</button>`;
            }

            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    html += `<span class="ellipsis">...</span>`;
                }
                html += `<button onclick="loadSubData('${platform}', '${subCategory}', '${subId}', ${totalPages})">${totalPages}</button>`;
            }

            // Next button
            html += `<button onclick="loadSubData('${platform}', '${subCategory}', '${subId}', ${currentPage + 1})" ${!hasNextPage ? 'disabled' : ''}>Next ‚ñ∂</button>`;
            html += '</div>';

            paginationContainer.innerHTML = html;
            console.log('‚úÖ Pagination buttons rendered');
        }

        // ============================================
        // APPLY FILTER & SEARCH
        // ============================================
        function applyFilterAndSearch(platform, subCategory, subId) {
            console.log('üîç Applying filter and search');
            loadSubData(platform, subCategory, subId, 1); // Reset to page 1
        }

        // ============================================
        // INIT
        // ============================================
        async function init() {
            try {
                const result = await fetchInitialData();
                
                if (!result.data || result.data.length === 0) {
                    document.getElementById('dataView').innerHTML = '<div class="loading">No data found</div>';
                    return;
                }
                
                console.log('üì¶ Got', result.data.length, 'items');
                
                const platforms = groupData(result.data, result.groupSummary);
                renderNested(platforms);
                
            } catch (error) {
                console.error('‚ùå Init error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Error: ${error.message}</div>`;
            }
        }

        // START
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Page loaded...');
            init();
        });
    </script>
</body>
</html>
