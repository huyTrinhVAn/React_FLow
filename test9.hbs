<!DOCTYPE html>
<html>
<head>
    <title>Platform Metrics</title>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/datatables.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }
        
        th {
            background-color: #870e40;
            color: #f2f2f2;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        /* COLLAPSE STYLING */
        .platform-header {
            background-color: #f5f5f5;
            cursor: pointer;
            padding: 15px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            margin-top: 10px;
        }

        .platform-header:hover {
            background-color: #e9ecef;
        }

        .sub-header {
            background-color: #f8f9fa;
            cursor: pointer;
            padding: 12px;
            padding-left: 30px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 3px solid #ddd;
            margin: 5px 0;
        }

        .sub-header:hover {
            background-color: #e9ecef;
        }

        .collapse-icon {
            font-size: 14px;
            margin-left: 10px;
        }

        .platform-content {
            display: none;
        }

        .platform-content.expanded {
            display: block;
        }

        .sub-content {
            display: none;
            margin-left: 20px;
            margin-bottom: 10px;
        }

        .sub-content.expanded {
            display: block;
        }

        .group-status {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: 10px;
            font-weight: bold;
        }

        .status-healthy {
            background-color: green;
            color: white;
        }

        .status-unhealthy {
            background-color: red;
            color: white;
        }

        /* SEARCH & FILTER STYLING */
        .sub-filters {
            background-color: #f8f9fa;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .sub-filters label {
            font-weight: bold;
            margin: 0;
        }

        .sub-filters input,
        .sub-filters select {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .sub-filters input {
            flex: 1;
            max-width: 300px;
        }

        /* PAGINATION STYLING */
        .group-pagination {
            text-align: center;
            margin-top: 15px;
            padding: 10px;
        }

        .pagination-info {
            margin-bottom: 10px;
            color: #666;
            font-size: 0.9rem;
        }

        .pagination-controls button {
            margin: 0 5px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            background-color: #fff;
            cursor: pointer;
            border-radius: 4px;
        }

        .pagination-controls button:hover {
            background-color: #f5f5f5;
        }

        .pagination-controls button:disabled {
            background-color: #f9f9f9;
            color: #ccc;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <h4 class="partialHeader">Platform Metrics</h4>

    <div id="dataView">
        <div class="loading">Loading...</div>
    </div>

    <!-- HANDLEBARS TEMPLATE -->
    <script id="nested-template" type="text/x-handlebars-template">
        \{{#each platforms}}
        <div>
            <!-- PLATFORM HEADER -->
            <div class="platform-header" onclick="togglePlatform('\{{this.platformId}}')">
                <div>
                    <span>\{{this.platform}} (\{{this.totalItems}} items)</span>
                    <span class="group-status status-\{{this.overallStatus}}">\{{uppercase this.overallStatus}}</span>
                </div>
                <span class="collapse-icon" id="icon-\{{this.platformId}}">‚ñ∂</span>
            </div>

            <!-- PLATFORM CONTENT -->
            <div class="platform-content" id="content-\{{this.platformId}}">
                \{{#each this.subCategories}}
                <div>
                    <!-- SUB-CATEGORY HEADER WITH STATUS -->
                    <div class="sub-header" onclick="toggleSub('\{{../this.platform}}', '\{{this.name}}', '\{{this.subId}}')">
                        <div>
                            <span>\{{this.name}} (\{{this.count}} items)</span>
                            <span class="group-status status-\{{this.status}}">\{{uppercase this.status}}</span>
                        </div>
                        <span class="collapse-icon" id="icon-\{{this.subId}}">‚ñ∂</span>
                    </div>

                    <!-- SUB-CATEGORY CONTENT -->
                    <div class="sub-content" id="content-\{{this.subId}}">
                        <!-- SEARCH & FILTER -->
                        <div class="sub-filters">
                            <label>Search:</label>
                            <input type="text" id="search-\{{this.subId}}" placeholder="Search account, item, etc..." onkeyup="searchGroup('\{{../this.platform}}', '\{{this.name}}', '\{{this.subId}}')">
                            
                            <label>Filter by State:</label>
                            <select id="filter-\{{this.subId}}" onchange="filterGroup('\{{../this.platform}}', '\{{this.name}}', '\{{this.subId}}')">
                                <option value="">All States</option>
                                <option value="Healthy">Healthy</option>
                                <option value="Unhealthy">Unhealthy</option>
                            </select>
                        </div>

                        <!-- TABLE -->
                        <table>
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Item Type</th>
                                    <th>State</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody id="tbody-\{{this.subId}}">
                                <!-- Items will be loaded when expanded -->
                            </tbody>
                        </table>

                        <!-- PAGINATION -->
                        <div class="group-pagination" id="pagination-\{{this.subId}}" style="display: none;">
                            <!-- Pagination controls will be populated here -->
                        </div>
                    </div>
                </div>
                \{{/each}}
            </div>
        </div>
        \{{/each}}
    </script>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>

    <script>
        // STATE
        let collapseState = {};

        // HANDLEBARS HELPERS
        Handlebars.registerHelper('eq', function(a, b) {
            return a === b;
        });

        Handlebars.registerHelper('uppercase', function(text) {
            return text ? text.toUpperCase() : '';
        });

        // FETCH DATA WITH PARAMS
        async function fetch_data(params = {}) {
            const queryParams = new URLSearchParams();
            
            Object.keys(params).forEach(key => {
                if (params[key] !== null && params[key] !== undefined && params[key] !== '') {
                    queryParams.append(key, params[key]);
                }
            });

            const endpoint = 'platformmetrics';
            const query = queryParams.toString() ? '?' + queryParams.toString() : '';
            
            try {
                console.log('üì• Fetching:', '/' + endpoint + query);
                const response = await fetch('/' + endpoint + query);
                const data = await response.json();
                
                console.log("‚úÖ Fetched data:", data);
                
                if (!data.success) {
                    throw new Error(data.error || 'Failed to fetch data');
                }
                
                return data;
            } catch (error) {
                console.error("‚ùå Error fetching data:", error);
                throw error;
            }
        }

        // GROUP DATA: platform > sub-category
        function groupData(data, groupSummary) {
            console.log('üî® Grouping data...');
            
            const grouped = {};
            data.forEach(item => {
                const platform = item.platform || 'Unknown';
                const sub = item['sub-category'] || 'Other';
                
                if (!grouped[platform]) {
                    grouped[platform] = {};
                }
                if (!grouped[platform][sub]) {
                    grouped[platform][sub] = [];
                }
                grouped[platform][sub].push(item);
            });

            const platforms = [];
            Object.keys(grouped).forEach(platform => {
                const platformId = platform.replace(/[^a-zA-Z0-9]/g, '_');
                const summary = groupSummary.find(g => g.platform === platform);
                const totalItems = Object.values(grouped[platform]).reduce((sum, items) => sum + items.length, 0);
                
                const subCategories = [];
                Object.keys(grouped[platform]).forEach(sub => {
                    const subId = (platform + '_' + sub).replace(/[^a-zA-Z0-9]/g, '_');
                    const items = grouped[platform][sub];
                    
                    const hasUnhealthy = items.some(item => item.state === 'Unhealthy');
                    const subStatus = hasUnhealthy ? 'unhealthy' : 'healthy';
                    
                    console.log(`  Sub: ${sub} => ${subStatus} (${items.length} items)`);
                    
                    subCategories.push({
                        name: sub,
                        subId: subId,
                        count: items.length,
                        status: subStatus
                    });
                });

                platforms.push({
                    platform: platform,
                    platformId: platformId,
                    totalItems: totalItems,
                    overallStatus: summary ? summary.overallStatus : 'unknown',
                    subCategories: subCategories
                });
            });

            console.log('‚úÖ Grouped structure:', platforms);
            return platforms;
        }

        // RENDER WITH HANDLEBARS
        function renderNested(platforms) {
            console.log('üìä Rendering nested structure...');
            
            try {
                const source = document.getElementById('nested-template').innerHTML;
                const template = Handlebars.compile(source);
                const html = template({ platforms });
                
                document.getElementById('dataView').innerHTML = html;
                console.log('‚úÖ Nested structure rendered!');
            } catch (error) {
                console.error('‚ùå Template error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Template error: ${error.message}</div>`;
            }
        }

        // TOGGLE PLATFORM
        function togglePlatform(platformId) {
            console.log('üîΩ Toggle platform:', platformId);
            
            collapseState[platformId] = !collapseState[platformId];
            const content = document.getElementById('content-' + platformId);
            const icon = document.getElementById('icon-' + platformId);
            
            if (collapseState[platformId]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // TOGGLE SUB-CATEGORY & LOAD DATA
        async function toggleSub(platform, sub, subId) {
            console.log('üîΩ Toggle sub:', platform, sub, subId);
            
            const key = platform + '_' + sub;
            collapseState[key] = !collapseState[key];
            const content = document.getElementById('content-' + subId);
            const icon = document.getElementById('icon-' + subId);
            
            if (collapseState[key]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
                
                // Load data when expanding
                const tbody = document.getElementById('tbody-' + subId);
                if (tbody && tbody.childElementCount === 0) {
                    loadGroupData(platform, sub, subId, 1);
                }
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // LOAD GROUP DATA WITH PAGINATION
        async function loadGroupData(platform, sub, subId, page = 1, search = '', state = '') {
            console.log('üì• Loading data:', {platform, sub, page, search, state});
            
            const tableBody = document.getElementById(`tbody-${subId}`);
            const pagination = document.getElementById(`pagination-${subId}`);
            
            if (!tableBody) {
                console.error('‚ùå tbody not found');
                return;
            }

            tableBody.innerHTML = '<tr><td colspan="6" class="loading">Loading...</td></tr>';

            try {
                const params = {
                    platform: platform,
                    'sub-category': sub,
                    page: page,
                    limit: 10
                };

                if (search) params.search = search;
                if (state) params.state = state;

                const data = await fetch_data(params);
                
                tableBody.innerHTML = '';

                if (!data.data || data.data.length === 0) {
                    tableBody.innerHTML = '<tr><td colspan="6" class="loading">No items found</td></tr>';
                    if (pagination) pagination.style.display = 'none';
                    return;
                }

                // Render rows
                data.data.forEach(item => {
                    const row = document.createElement('tr');
                    const statusColor = item.state === 'Healthy' ? 'green' : 'red';
                    row.innerHTML = `
                        <td>${item.account || ''}</td>
                        <td>${item.date || ''}</td>
                        <td>${item.item || ''}</td>
                        <td>${item.item_type || ''}</td>
                        <td style="color: ${statusColor}">${item.state || ''}</td>
                        <td>${item.reason || ''}</td>
                    `;
                    tableBody.appendChild(row);
                });

                // Update pagination
                updatePagination(platform, sub, subId, data.pagination);

                console.log('‚úÖ Data loaded successfully');

            } catch (error) {
                console.error("‚ùå Error loading data:", error);
                tableBody.innerHTML = `<tr><td colspan="6" class="loading">Error: ${error.message}</td></tr>`;
                if (pagination) pagination.style.display = 'none';
            }
        }

        // UPDATE PAGINATION
        function updatePagination(platform, sub, subId, paginationData) {
            console.log('üìÑ Updating pagination:', paginationData);
            
            const paginationContainer = document.getElementById(`pagination-${subId}`);
            
            if (!paginationContainer || !paginationData) {
                console.warn('‚ö†Ô∏è Pagination not found');
                return;
            }

            const { currentPage, totalPages, totalItems, itemsPerPage, hasNextPage, hasPreviousPage } = paginationData;
            
            const startItem = totalItems > 0 ? ((currentPage - 1) * itemsPerPage) + 1 : 0;
            const endItem = Math.min(currentPage * itemsPerPage, totalItems);

            paginationContainer.innerHTML = `
                <div class="pagination-info">
                    Showing ${startItem}-${endItem} of ${totalItems} items
                </div>
                <div class="pagination-controls">
                    <button onclick="goToPage('${platform}', '${sub}', '${subId}', 1)" ${!hasPreviousPage ? 'disabled' : ''}>First</button>
                    <button onclick="goToPage('${platform}', '${sub}', '${subId}', ${currentPage - 1})" ${!hasPreviousPage ? 'disabled' : ''}>Previous</button>
                    <span style="margin: 0 10px;">Page ${currentPage} of ${totalPages}</span>
                    <button onclick="goToPage('${platform}', '${sub}', '${subId}', ${currentPage + 1})" ${!hasNextPage ? 'disabled' : ''}>Next</button>
                    <button onclick="goToPage('${platform}', '${sub}', '${subId}', ${totalPages})" ${!hasNextPage ? 'disabled' : ''}>Last</button>
                </div>
            `;

            if (totalPages <= 1) {
                paginationContainer.style.display = 'none';
            } else {
                paginationContainer.style.display = 'block';
            }
        }

        // GO TO PAGE
        function goToPage(platform, sub, subId, page) {
            console.log('üìÑ Go to page:', page);
            
            const searchInput = document.getElementById(`search-${subId}`);
            const filterSelect = document.getElementById(`filter-${subId}`);
            
            const search = searchInput ? searchInput.value.trim() : '';
            const state = filterSelect ? filterSelect.value : '';

            loadGroupData(platform, sub, subId, page, search, state);
        }

        // SEARCH GROUP
        function searchGroup(platform, sub, subId) {
            console.log('üîç Search in:', platform, sub);
            loadGroupData(platform, sub, subId, 1);
        }

        // FILTER GROUP
        function filterGroup(platform, sub, subId) {
            console.log('üîç Filter in:', platform, sub);
            loadGroupData(platform, sub, subId, 1);
        }

        // MAIN FUNCTION
        async function init() {
            try {
                const result = await fetch_data({ limit: 0 });
                
                if (!result.data || result.data.length === 0) {
                    document.getElementById('dataView').innerHTML = '<div class="loading">No data found</div>';
                    return;
                }
                
                console.log('üì¶ Got', result.data.length, 'items');
                
                const platforms = groupData(result.data, result.groupSummary);
                renderNested(platforms);
                
            } catch (error) {
                console.error('‚ùå Init error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Error: ${error.message}</div>`;
            }
        }

        // START
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Page loaded...');
            init();
        });
    </script>
</body>
</html>
