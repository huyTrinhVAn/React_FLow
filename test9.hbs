<!DOCTYPE html>
<html>
<head>
    <title>Platform Metrics</title>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/datatables.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            border: 1px solid #ccc;
            padding: 12px 15px;
            text-align: left;
        }
        
        th {
            background-color: #870e40;
            color: #f2f2f2;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        /* COLLAPSE STYLING */
        .platform-header {
            background-color: #f5f5f5;
            cursor: pointer;
            padding: 15px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            margin-top: 10px;
        }

        .platform-header:hover {
            background-color: #e9ecef;
        }

        .sub-header {
            background-color: #f8f9fa;
            cursor: pointer;
            padding: 12px;
            padding-left: 30px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 3px solid #ddd;
            margin: 5px 0;
        }

        .sub-header:hover {
            background-color: #e9ecef;
        }

        .collapse-icon {
            font-size: 14px;
            margin-left: 10px;
        }

        .platform-content {
            display: none;
        }

        .platform-content.expanded {
            display: block;
        }

        .sub-content {
            display: none;
            margin-left: 20px;
            margin-bottom: 10px;
        }

        .sub-content.expanded {
            display: block;
        }

        .group-status {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: 10px;
            font-weight: bold;
        }

        .status-healthy {
            background-color: green;
            color: white;
        }

        .status-unhealthy {
            background-color: red;
            color: white;
        }

        /* SEARCH & FILTER STYLING */
        .sub-filters {
            background-color: #f8f9fa;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 5px;
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .sub-filters label {
            font-weight: bold;
            margin: 0;
        }

        .sub-filters input,
        .sub-filters select {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .sub-filters input {
            flex: 1;
            max-width: 300px;
        }

        /* ===== PAGINATION STYLING ===== */
        .pagination-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 15px;
            gap: 5px;
            flex-wrap: wrap;
        }

        .pagination-info {
            width: 100%;
            text-align: center;
            margin-bottom: 10px;
            font-size: 13px;
            color: #666;
        }

        .pagination-wrapper button,
        .pagination-wrapper .page-number {
            padding: 8px 10px;
            border: 1px solid #ddd;
            background-color: #fff;
            cursor: pointer;
            border-radius: 4px;
            font-size: 13px;
            min-width: 35px;
            text-align: center;
        }

        .pagination-wrapper button:hover:not(:disabled),
        .pagination-wrapper .page-number:hover {
            background-color: #f5f5f5;
        }

        .pagination-wrapper button:disabled {
            background-color: #f9f9f9;
            color: #ccc;
            cursor: not-allowed;
        }

        .pagination-wrapper .page-number.active {
            background-color: #870e40;
            color: white;
            border-color: #870e40;
        }

        .pagination-wrapper .ellipsis {
            padding: 8px 5px;
            cursor: default;
        }

        .no-results {
            text-align: center;
            padding: 20px;
            color: #999;
            font-style: italic;
        }
    </style>
</head>
<body>
    <h4 class="partialHeader">Platform Metrics</h4>

    <div id="dataView">
        <div class="loading">Loading...</div>
    </div>

    <!-- HANDLEBARS TEMPLATE -->
    <script id="nested-template" type="text/x-handlebars-template">
        \{{#each platforms}}
        <div>
            <!-- PLATFORM HEADER -->
            <div class="platform-header" onclick="togglePlatform('\{{this.platformId}}')">
                <div>
                    <span>\{{this.platform}} (\{{this.totalItems}} items)</span>
                    <span class="group-status status-\{{this.overallStatus}}">\{{uppercase this.overallStatus}}</span>
                </div>
                <span class="collapse-icon" id="icon-\{{this.platformId}}">‚ñ∂</span>
            </div>

            <!-- PLATFORM CONTENT -->
            <div class="platform-content" id="content-\{{this.platformId}}">
                \{{#each this.subCategories}}
                <div>
                    <!-- SUB-CATEGORY HEADER WITH STATUS -->
                    <div class="sub-header" onclick="toggleSub('\{{../this.platformId}}', '\{{this.subId}}')">
                        <div>
                            <span>\{{this.name}} (\{{this.count}} items)</span>
                            <span class="group-status status-\{{this.status}}">\{{uppercase this.status}}</span>
                        </div>
                        <span class="collapse-icon" id="icon-\{{this.subId}}">‚ñ∂</span>
                    </div>

                    <!-- SUB-CATEGORY CONTENT -->
                    <div class="sub-content" id="content-\{{this.subId}}">
                        <!-- SEARCH & FILTER -->
                        <div class="sub-filters">
                            <label>Search:</label>
                            <input type="text" id="search-\{{this.subId}}" placeholder="Search account, item, etc..." onkeyup="applyFilterAndSearch('\{{this.subId}}')">
                            
                            <label>Filter by State:</label>
                            <select id="filter-\{{this.subId}}" onchange="applyFilterAndSearch('\{{this.subId}}')">
                                <option value="">All States</option>
                                <option value="Healthy">Healthy</option>
                                <option value="Unhealthy">Unhealthy</option>
                            </select>
                        </div>

                        <!-- TABLE -->
                        <table>
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Item Type</th>
                                    <th>State</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody id="tbody-\{{this.subId}}">
                                \{{#each this.items}}
                                <tr class="data-row" data-search="\{{this.account}} \{{this.item}} \{{this.account}}" data-state="\{{this.state}}">
                                    <td>\{{this.account}}</td>
                                    <td>\{{this.date}}</td>
                                    <td>\{{this.item}}</td>
                                    <td>\{{this.item_type}}</td>
                                    <td style="color: \{{#if (eq this.state 'Healthy')}}green\{{else}}red\{{/if}}">\{{this.state}}</td>
                                    <td>\{{this.reason}}</td>
                                </tr>
                                \{{/each}}
                            </tbody>
                        </table>

                        <!-- ===== PAGINATION CONTROLS ===== -->
                        <div class="pagination-wrapper" id="pagination-\{{this.subId}}">
                            <!-- Pagination will be rendered here -->
                        </div>
                    </div>
                </div>
                \{{/each}}
            </div>
        </div>
        \{{/each}}
    </script>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>

    <script>
        // STATE
        let collapseState = {};
        // ===== NEW: PAGINATION STATE =====
        let paginationState = {}; // Store current page for each sub-category

        // HANDLEBARS HELPERS
        Handlebars.registerHelper('eq', function(a, b) {
            return a === b;
        });

        Handlebars.registerHelper('uppercase', function(text) {
            return text ? text.toUpperCase() : '';
        });

        // FETCH DATA
        async function fetchData() {
            try {
                console.log('üì• Fetching data...');
                const response = await fetch('/platformmetrics');
                const result = await response.json();
                
                console.log('‚úÖ API Response:', result);
                
                if (!result.success) {
                    throw new Error(result.error || 'Failed to fetch');
                }
                
                return result;
            } catch (error) {
                console.error('‚ùå Fetch error:', error);
                throw error;
            }
        }

        // GROUP DATA: platform > sub-category
        function groupData(data, groupSummary) {
            console.log('üî® Grouping data...');
            
            // Step 1: Group by platform > sub-category
            const grouped = {};
            data.forEach(item => {
                const platform = item.platform || 'Unknown';
                const sub = item['sub-category'] || 'Other';
                
                if (!grouped[platform]) {
                    grouped[platform] = {};
                }
                if (!grouped[platform][sub]) {
                    grouped[platform][sub] = [];
                }
                grouped[platform][sub].push(item);
            });

            // Step 2: Build structure for Handlebars
            const platforms = [];
            Object.keys(grouped).forEach(platform => {
                const platformId = platform.replace(/[^a-zA-Z0-9]/g, '_');
                const summary = groupSummary.find(g => g.platform === platform);
                const totalItems = Object.values(grouped[platform]).reduce((sum, items) => sum + items.length, 0);
                
                const subCategories = [];
                Object.keys(grouped[platform]).forEach(sub => {
                    const subId = (platform + '_' + sub).replace(/[^a-zA-Z0-9]/g, '_');
                    const items = grouped[platform][sub];
                    
                    // Calculate sub status: if any item is unhealthy, sub is unhealthy
                    const hasUnhealthy = items.some(item => item.state === 'Unhealthy');
                    const subStatus = hasUnhealthy ? 'unhealthy' : 'healthy';
                    
                    console.log(`  Sub: ${sub} => ${subStatus} (${items.length} items)`);
                    
                    subCategories.push({
                        name: sub,
                        subId: subId,
                        count: items.length,
                        status: subStatus,
                        items: items
                    });
                });

                platforms.push({
                    platform: platform,
                    platformId: platformId,
                    totalItems: totalItems,
                    overallStatus: summary ? summary.overallStatus : 'unknown',
                    subCategories: subCategories
                });
            });

            console.log('‚úÖ Grouped structure:', platforms);
            return platforms;
        }

        // RENDER WITH HANDLEBARS
        function renderNested(platforms) {
            console.log('üìä Rendering nested structure...');
            
            try {
                const source = document.getElementById('nested-template').innerHTML;
                const template = Handlebars.compile(source);
                const html = template({ platforms });
                
                document.getElementById('dataView').innerHTML = html;
                console.log('‚úÖ Nested structure rendered!');
            } catch (error) {
                console.error('‚ùå Template error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Template error: ${error.message}</div>`;
            }
        }

        // TOGGLE PLATFORM
        function togglePlatform(platformId) {
            console.log('üîΩ Toggle platform:', platformId);
            
            collapseState[platformId] = !collapseState[platformId];
            const content = document.getElementById('content-' + platformId);
            const icon = document.getElementById('icon-' + platformId);
            
            if (collapseState[platformId]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // TOGGLE SUB-CATEGORY
        function toggleSub(platformId, subId) {
            console.log('üîΩ Toggle sub:', platformId, subId);
            
            const key = platformId + '_' + subId;
            collapseState[key] = !collapseState[key];
            const content = document.getElementById('content-' + subId);
            const icon = document.getElementById('icon-' + subId);
            
            if (collapseState[key]) {
                content.classList.add('expanded');
                icon.textContent = '‚ñº';
                // ===== NEW: Initialize pagination when expand =====
                initPagination(subId);
            } else {
                content.classList.remove('expanded');
                icon.textContent = '‚ñ∂';
            }
        }

        // ===== NEW: INIT PAGINATION =====
        function initPagination(subId) {
            console.log('üìÑ Initializing pagination for:', subId);
            paginationState[subId] = 1; // Reset to page 1
            renderPagination(subId);
        }

        // ===== NEW: RENDER PAGINATION =====
        function renderPagination(subId) {
            console.log('üìÑ Rendering pagination for:', subId);
            
            const tbody = document.getElementById('tbody-' + subId);
            const paginationContainer = document.getElementById('pagination-' + subId);
            
            if (!tbody || !paginationContainer) return;

            // Get all visible rows (after search/filter)
            const allRows = Array.from(tbody.querySelectorAll('tr.data-row'));
            const visibleRows = allRows.filter(row => row.style.display !== 'none');
            
            const ITEMS_PER_PAGE = 10;
            const totalItems = visibleRows.length;
            const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE);
            
            if (totalPages <= 1) {
                paginationContainer.innerHTML = ''; // Hide if only 1 page
                showPageRows(subId, 1, ITEMS_PER_PAGE);
                return;
            }

            const currentPage = paginationState[subId] || 1;
            let html = `<div class="pagination-info">Showing ${(currentPage - 1) * ITEMS_PER_PAGE + 1}-${Math.min(currentPage * ITEMS_PER_PAGE, totalItems)} of ${totalItems} items</div>`;
            html += '<div style="display: flex; justify-content: center; gap: 5px; flex-wrap: wrap;">';

            // Previous button
            html += `<button onclick="goToPage('${subId}', ${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}>‚óÄ Previous</button>`;

            // Page numbers with ellipsis
            let startPage = Math.max(1, currentPage - 1);
            let endPage = Math.min(totalPages, currentPage + 1);

            if (startPage > 1) {
                html += `<span class="page-number" onclick="goToPage('${subId}', 1)">1</span>`;
                if (startPage > 2) {
                    html += `<span class="ellipsis">...</span>`;
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                html += `<span class="page-number ${i === currentPage ? 'active' : ''}" onclick="goToPage('${subId}', ${i})">${i}</span>`;
            }

            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    html += `<span class="ellipsis">...</span>`;
                }
                html += `<span class="page-number" onclick="goToPage('${subId}', ${totalPages})">${totalPages}</span>`;
            }

            // Next button
            html += `<button onclick="goToPage('${subId}', ${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}>Next ‚ñ∂</button>`;
            html += '</div>';

            paginationContainer.innerHTML = html;
            
            // Show only current page rows
            showPageRows(subId, currentPage, ITEMS_PER_PAGE);
        }

        // ===== NEW: SHOW SPECIFIC PAGE ROWS =====
        function showPageRows(subId, page, itemsPerPage) {
            const tbody = document.getElementById('tbody-' + subId);
            if (!tbody) return;

            const allRows = Array.from(tbody.querySelectorAll('tr.data-row'));
            const visibleRows = allRows.filter(row => row.style.display !== 'none');
            
            const start = (page - 1) * itemsPerPage;
            const end = start + itemsPerPage;

            visibleRows.forEach((row, idx) => {
                row.style.display = (idx >= start && idx < end) ? '' : 'none';
            });

            console.log(`  Showing rows ${start + 1}-${Math.min(end, visibleRows.length)} of ${visibleRows.length}`);
        }

        // ===== NEW: GO TO PAGE =====
        function goToPage(subId, page) {
            console.log('üìÑ Go to page:', subId, 'page', page);
            paginationState[subId] = page;
            renderPagination(subId);
            window.scrollTo({top: document.getElementById('pagination-' + subId).offsetTop, behavior: 'smooth'});
        }

        // APPLY FILTER & SEARCH
        function applyFilterAndSearch(subId) {
            console.log('üîç Applying filter and search for:', subId);
            
            const searchInput = document.getElementById('search-' + subId);
            const filterSelect = document.getElementById('filter-' + subId);
            const tbody = document.getElementById('tbody-' + subId);
            
            if (!searchInput || !filterSelect || !tbody) {
                console.warn('‚ùå Elements not found');
                return;
            }
            
            const searchText = searchInput.value.toLowerCase().trim();
            const filterState = filterSelect.value;
            
            console.log('  Search text:', searchText);
            console.log('  Filter state:', filterState);
            
            let visibleCount = 0;
            const rows = tbody.querySelectorAll('tr.data-row');
            
            rows.forEach(row => {
                const searchData = row.getAttribute('data-search').toLowerCase();
                const rowState = row.getAttribute('data-state');
                
                // Check search text match
                const searchMatch = searchText === '' || searchData.includes(searchText);
                
                // Check state filter match
                const stateMatch = filterState === '' || rowState === filterState;
                
                if (searchMatch && stateMatch) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });
            
            // ===== NEW: Re-render pagination after filter =====
            renderPagination(subId);
            
            console.log(`  Showing ${visibleCount} of ${rows.length} rows`);
        }

        // MAIN FUNCTION
        async function init() {
            try {
                const result = await fetchData();
                
                if (!result.data || result.data.length === 0) {
                    document.getElementById('dataView').innerHTML = '<div class="loading">No data found</div>';
                    return;
                }
                
                console.log('üì¶ Got', result.data.length, 'items');
                
                const platforms = groupData(result.data, result.groupSummary);
                renderNested(platforms);
                
            } catch (error) {
                console.error('‚ùå Init error:', error);
                document.getElementById('dataView').innerHTML = `<div class="loading" style="color: red;">Error: ${error.message}</div>`;
            }
        }

        // START
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Page loaded...');
            init();
        });
    </script>
</body>
</html>
